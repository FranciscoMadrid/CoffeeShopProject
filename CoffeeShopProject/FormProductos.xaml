<Window x:Class="CoffeeShopProject.FormProductos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoffeeShopProject"
        mc:Ignorable="d"
        Title="FormProductos" Height="535" Width="800">
    <Grid Margin="0,0,0,64">
        <Button Name="btnIngresar" Content="Ingresar" HorizontalAlignment="Left" Height="39" Margin="44,258,0,0" VerticalAlignment="Top" Width="76"/>
        <Button Name="btnModificar" Content="Modificar" HorizontalAlignment="Left" Height="39" Margin="144,258,0,0" VerticalAlignment="Top" Width="76"/>
        <Button Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Height="39" Margin="240,258,0,0" VerticalAlignment="Top" Width="76"/>
        <Button Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" Height="39" Margin="332,258,0,0" VerticalAlignment="Top" Width="76"/>
        <Button Name="btnLimpiar" Content="Limpiar" HorizontalAlignment="Left" Height="39" Margin="434,258,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="93,22,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="202"/>
        <Label Content="Buscar:" HorizontalAlignment="Left" Margin="32,17,0,0" VerticalAlignment="Top"/>
        <TabControl Name="tbProductos" Margin="25,57,271,215" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Productos Generales">
                <DockPanel>
                    <DataGrid Name="dgProductoGenerales"></DataGrid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Productos Bebidas">
                <DockPanel>
                    <DataGrid Name="dgBebidas"></DataGrid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Productos Comidas">
                <DockPanel>
                    <DataGrid Name="dgComidas"></DataGrid>
                </DockPanel>
            </TabItem>
        </TabControl>
        <GroupBox Name="gbProductoGeneral" Header="Detalles de Producto" Margin="534,19,10,227" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55*"/>
                    <ColumnDefinition Width="67*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Content="Id:" Grid.Row="0" Grid.Column="0"/>
                <TextBox Name="txtId" Grid.Row="0" Grid.Column="1" Margin="0,2,0,2"/>

                <Label Name="Lbl" Content="Nombre Producto:" Grid.Row="1" Grid.Column="0"/>
                <TextBox Name="txtNombre" Grid.Row="1" Grid.Column="1" Margin="0,2,0,2"/>

                <Label Content="Descripcion:" Grid.Row="2" Grid.Column="0"/>
                <TextBox Name="txtDescripcion" Grid.Row="2" Grid.Column="1" Margin="0,2,0,2"/>

                <Label Content="Categoria:"  Grid.Row="3" Grid.Column="0"/>
                <ComboBox Name="cmbCategoria" Grid.Row="3" Grid.Column="1" Margin="0,2,0,2"/>


            </Grid>
        </GroupBox>
        <GroupBox Name="gbBebidas" Header="Bebidas" Margin="534,19,10,227" Visibility="Hidden">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55*"/>
                    <ColumnDefinition Width="67*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Content="Id:" Grid.Row="0" Grid.Column="0"/>
                <TextBox Name="txtIdb" Grid.Row="0" Grid.Column="1" Margin="0,2,0,2"/>

                <Label  Content="Nombre Producto:" Grid.Row="1" Grid.Column="0"/>
                <TextBox Name="txtNombreb" Grid.Row="1" Grid.Column="1" Margin="0,2,0,2"/>

                <Label Content="Descripcion:" Grid.Row="2" Grid.Column="0"/>
                <TextBox Name="txtDescripcionb" Grid.Row="2" Grid.Column="1" Margin="0,2,0,2"/>

                <Label Content="Categoria:"  Grid.Row="3" Grid.Column="0"/>
                <ComboBox Name="cmbCategoriab" Grid.Row="3" Grid.Column="1" Margin="0,2,0,2"/>

                <Label Content="Ingredientes:" Grid.Row="4" Grid.Column="0"/>
                <TextBox x:Name="txtIngredienteb" Grid.Row="4" Grid.Column="1" Margin="0,2,0,2"/>

                <Label Content="Tamaño:" Grid.Row="5" Grid.Column="0"/>
                <TextBox x:Name="txtTamanob" Grid.Row="5" Grid.Column="1" Margin="0,2,0,2"/>

                <Label Content="Costo:" Grid.Row="6" Grid.Column="0"/>
                <TextBox x:Name="txtCostob" Grid.Row="6" Grid.Column="1" Margin="0,2,0,2"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Comidas" Margin="534,19,10,227" Visibility="Hidden">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55*"/>
                    <ColumnDefinition Width="67*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="Id:"  FontSize="14" Grid.Row="0" Grid.Column="0" Margin="0,0,0,27" Grid.RowSpan="2"/>
                <TextBox x:Name="txtIdc" Grid.Row="0" Grid.Column="1" Margin="0,2,0,2"/>
                
                <Label  Content="Nombre Producto:" Grid.Row="1" Grid.Column="0" Margin="0,0,0,26" Grid.RowSpan="2"/>
                <TextBox x:Name="txtNombreProductoc" Grid.Row="1" Grid.Column="1" Margin="0,2,0,2"/>

                <Label Content="Descripcion:"  Grid.Row="2" Grid.Column="0"/>
                <TextBox x:Name="txtDescripcionc" Grid.Row="2" Grid.Column="1"  Margin="0,2,0,2"/>

                <Label Content="Categoria:" Grid.Row="3" Grid.Column="0"/>
                <ComboBox Name="cmbCategoriac" Grid.Row="3" Grid.Column="1" Margin="0,2,0,2"/>

                <Label Content="Ingredientes:" Grid.Row="4" Grid.Column="0"/>
                <TextBox x:Name="txtIngredientesc" Grid.Row="4" Grid.Column="1" Margin="0,2,0,2"/>

                <Label Content="Costo:" Grid.Row="5" Grid.Column="0"/>
                <TextBox x:Name="txtcostoc" Grid.Row="5" Grid.Column="1" Margin="0,2,0,2"/>
            </Grid>
        </GroupBox>


    </Grid>
</Window>
